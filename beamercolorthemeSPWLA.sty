\ProvidesPackage{beamercolorthemeSPWLA}[2022/03/02 v1.0.0 The SPWLA 2022 Theme]

\RequirePackage{ifthen}

%------------------------------------------
% Theme options, definitions and templates.
%------------------------------------------
\def\beamer@SPWLA@palette{default}  % Could be feather, navy, UHECE, default (SPWLA)
\DeclareOptionBeamer{color}{\def\beamer@SPWLA@palette{#1}}    
\ProcessOptionsBeamer

\def\testmacro{\beamer@SPWLA@palette}

%-------------------------
% beamer specific options.
%--------------------------
\mode<presentation>
{
  %refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode

  %% defining colors 
  \definecolor{beamer@barcolor}{RGB}{194,193,204} % Feather gray
  \ifthenelse{\equal{\beamer@SPWLA@palette}{UHECE}}{
    % UHECE palette: Red
    \definecolor{beamer@normaltextcolor}{HTML}{6E5454} % text
    \definecolor{beamer@headercolor}{HTML}{C8102E} % theme
    \setbeamercolor{SPWLA}{fg=beamer@headercolor!20, bg=beamer@headercolor}
  }{
    \ifthenelse{\equal{\beamer@SPWLA@palette}{navy}}{
      % navy palette: DarkBlue
      \definecolor{beamer@normaltextcolor}{HTML}{505669} % text
      \definecolor{beamer@headercolor}{HTML}{006EB8} % theme
      \setbeamercolor{SPWLA}{fg=beamer@headercolor!20, bg=beamer@headercolor}
    }{
      \ifthenelse{\equal{\beamer@SPWLA@palette}{dark}}{
        % dark palette: Grimy grey
        \definecolor{beamer@normaltextcolor}{HTML}{222222} % text
        \definecolor{beamer@headercolor}{HTML}{515151} % theme
        \setbeamercolor{SPWLA}{fg=beamer@headercolor!20, bg=beamer@headercolor}
      }{
        \ifthenelse{\equal{\beamer@SPWLA@palette}{feather}}{
          % feather palette: Forest green
          \definecolor{beamer@normaltextcolor}{HTML}{54616E} % text
          \definecolor{beamer@headercolor}{HTML}{00698A} % theme
          \setbeamercolor{SPWLA}{fg=beamer@headercolor!20, bg=beamer@headercolor}
        }{
          % SPWLA (default): 
          \definecolor{beamer@normaltextcolor}{HTML}{6E6154} % text
          \definecolor{beamer@headercolor}{HTML}{DD8047} % theme
          \definecolor{beamer@headercolor2}{HTML}{F7E2D5} % theme
          \setbeamercolor{SPWLA}{fg=beamer@headercolor2, bg=beamer@headercolor}
        }
      }
    }
  }

  %% setting the above deffinitions
  \setbeamercolor{structure}{fg=beamer@headercolor}
  \setbeamercolor{normal text}{fg=beamer@normaltextcolor}  
  \setbeamercolor{frametitle}{use=SPWLA, fg=SPWLA.fg, bg=SPWLA.bg}
  \setbeamercolor{block title}{use=SPWLA, bg=SPWLA.fg, fg=SPWLA.bg!80!black}
  \setbeamercolor{title body}{use=SPWLA, fg=white, bg=black!80!white}
}

\mode<beamer>
{
  \setbeamercolor{block title}{use=SPWLA, bg=black!80!white, fg=SPWLA.fg!80!white}
  \setbeamercolor{block body}{fg=white}
}

\mode<all>
