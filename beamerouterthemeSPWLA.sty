% macros used in the theme 
%% coordinate the fancy header background

\newcommand{\featherheaderbackground}[0]
{
  \begin{tikzpicture}[overlay]
    \coordinate (UL) at (0,0); %upper left corner of the slide
    \coordinate (HLR) at (\paperwidth,-0.9\beamer@height); %lower right of the header
    
    \coordinate (ULL) at (0,-0.95\beamer@height); % upper left corner of the line 
    \coordinate (LLR) at (\paperwidth,-1\beamer@height); % lower right corner of the line 
    
    \coordinate (ULF) at (0, \dimexpr-\paperheight+1.6em\relax);
    % \coordinate (ULF) at (0,-5.90\beamer@height); % upper left corner of the footline 
    \coordinate (LFR) at (\paperwidth,-\paperheight);
    % \coordinate (LFR) at (\paperwidth,-6.08\beamer@height); % lower right corner of the footline 
    
    \coordinate (logopos) at ([shift={(-1.64\beamer@logoouterradius-2.05\beamer@borderwidth,\beamer@height-\beamer@logoouterradius-5.5\beamer@borderwidth)}] HLR); % coordinate of the logo and the circ position

    %%draw the background of the header, the circle and the logo
    {
      \usebeamercolor{SPWLA}

      %% draw the blue background rectangle of the header and the line below it
      \draw[draw=none,fill=SPWLA.bg] (UL) rectangle (HLR); % background rectabgle
      \draw[draw=none,fill=SPWLA.fg] (ULL) rectangle (LLR); % line below the background rectangle
      \draw[draw=none,fill=SPWLA.bg] (ULF) rectangle (LFR); % footline 

      %% draw the outer circle
      \fill[fill=SPWLA.fg] (logopos) ellipse [x radius=1.64\beamer@logoouterradius, y radius=\beamer@logoouterradius];

      %% draw the inner circle
      \fill[fill=normal text.bg] (logopos) ellipse [x radius=1.64\beamer@logoinnerradius, y radius=\beamer@logoinnerradius];

      %% place the logo in the circle
      %% LLT: use customisable \logofile
      \node at (logopos) {\includegraphics[width=\dimexpr \logoscale \beamer@logoradius * 3\relax]{\logofile}};

      %% draw progress circle/bar
      \ifx\beamer@progressstyle\beamer@progressmovingCircCnt% the circular counter with a moving counter

      %% calculate end position
      %%% LLT: modified to discount unnumbered frames, and
      %%% make the arc go a complete circle at end of
      %%% presentation
      \ifx\beamer@rotationcw\undefined% counterclockwise rotation
      \pgfmathsetmacro{\effectivetotalframe}
      {max(\inserttotalframenumber-\theunnumberedframe,1)}
      \pgfmathsetmacro{\progress}{(\insertframenumber-\theunnumberedframe)/\effectivetotalframe*360};
      \else% clockwise rotation
      \pgfmathsetmacro{\progress}{(\insertframenumber-\theunnumberedframe)/\effectivetotalframe*(-360)}; 
      \fi

      %% draw the arc
      \draw[color=SPWLA.bg,line width=0.2*\beamer@borderwidth] ([xshift=1.64\beamer@counterradius] logopos) arc[x radius=1.64\beamer@counterradius, y radius=\beamer@counterradius, start angle=0, end angle=\progress] node [pos=1.0, name=eliparcend] {};
      \fill[fill=SPWLA.bg] (eliparcend.center) circle (0.25\beamer@borderwidth);

      %% place the current frame number
      \node[fill=normal text.bg,draw=SPWLA.fg,thick,circle,minimum width=2*\beamer@borderwidth] at ([xshift=1.64\beamer@counterradius]logopos) {{\usebeamercolor[fg]{normal text}\insertframenumber}};
      \fi      
      \ifx\beamer@progressstyle\beamer@progressfixedCircCnt % the circular counter with a fixed counter

      %% draw the current frame number
      \ifx\beamer@rotationcw\undefined % counterclockwise rotation
        \pgfmathsetmacro{\progress}{360*\insertframestartpage};
      \else% clockwise rotation
        \pgfmathsetmacro{\progress}{-360*\insertframestartpage};
      \fi

      %% draw the arc
      \draw[color=SPWLA.bg,line width=0.5*\beamer@borderwidth] ([xshift=\beamer@counterradius] logopos) arc (0:\progress:\beamer@counterradius);

      %% place the current frame number
      \node[fill=normal text.bg,draw=SPWLA.fg,circle,thick,minimum width=2*\beamer@borderwidth] at ([shift={(\progress:\beamer@counterradius)}] logopos) {{\usebeamercolor[fg]{normal text}\insertframenumber}};
      \fi
    }
  \end{tikzpicture}
}


