\mode<presentation>
{
  % refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode

  \ifbeamercolorempty[fg]{SPWLA}
  {
    \setbeamercolor{SPWLA}{use={structure,palette sidebar primary},fg=palette sidebar primary.fg,bg=structure.fg}
  }{}

  \setbeamertemplate{headline} % headline
  {
    \featherheaderbackground
  }

  \setbeamertemplate{footline} % footline  
  {
    \vspace{0.5em}
    \begin{beamercolorbox}[wd=1.0\paperwidth,ht=1.25ex,dp=1ex,left]{headfoot}
    {
      \usebeamercolor[fg]{frametitle}
      \usebeamerfont{section in head/foot}\hspace*{3.5ex}
      \insertshortauthor\ |\ 
      \insertshorttitle
      \insertshortsubtitle
    }
    \end{beamercolorbox}
  }

  \setbeamertemplate{frametitle} % frame title
  {
    \begin{minipage}[c][0.9\beamer@height][c]{\textwidth}
      {\usebeamercolor[fg]{frametitle}\usebeamerfont{frametitle}\insertframetitle\par}
      {\usebeamercolor[fg]{framesubtitle}\usebeamerfont{framesubtitle}\insertframesubtitle\par}
    \end{minipage}
  }
  \ifx\beamer@shownavsym\undefined % insert navigation symbols
    \setbeamertemplate{navigation symbols}
    
  \fi
  
  %%setting the blocks
  
  \setbeamertemplate{blocks}[rounded][shadow=true]
  \setbeamercolor{block body}{parent=normal text, use=block title,bg=SPWLA.fg!30}
}


\mode<beamer> 
{
  % refers to the first mode (beamer).
  \ifbeamercolorempty[fg]{SPWLA}
  {
    \setbeamercolor{SPWLA}{use={structure,palette sidebar primary},fg=palette sidebar primary.fg,bg=structure.fg}
  }{}
  
  \setbeamertemplate{headline} % headline
  {
    \SPWLAbackground
  }

  \setbeamertemplate{footline} % footline  
  {\vspace{2.0em}\leavevmode\hbox{%
    \begin{beamercolorbox}[wd=0.75\paperwidth,ht=1.25ex,dp=1ex,left]{headfoot/info}
      {
        \usebeamercolor[fg]{frametitle}
        \usebeamerfont{section in head/foot}\hspace*{3.5ex}
        \insertshortauthor\ |\ 
        \insertshorttitle
        \ifx\insertsubtitle\@empty
        \else
          \ |\ \insertshortsubtitle
        \fi
      }
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=0.22\paperwidth,ht=1.25ex,dp=1ex,right]{headfoot/time}
      {
        \usebeamercolor[fg]{frametitle}
        \usebeamerfont{section in head/foot}\hspace*{3.5ex}
        \insertshortdate{}
      }
    \end{beamercolorbox}
  }}

  %\addtolength{\headsep}{0.5cm}
  \setbeamertemplate{frametitle} % frame title
  {
    \vspace{0.5cm}
    \begin{minipage}[c][0.9\beamer@height][c]{\textwidth}
      {\usebeamercolor[bg]{frametitle}\usebeamerfont{frametitle}\insertframetitle\par}
      {\usebeamercolor[bg]{framesubtitle}\usebeamerfont{framesubtitle}\insertframesubtitle\par}
    \end{minipage}
  }
  \ifx\beamer@shownavsym\undefined % insert navigation symbols
    \setbeamertemplate{navigation symbols}
  
  \fi
  
  %%setting the blocks
  \tcbset{block-spwla/.style={
      code={%
        \usebeamercolor{block title}%
        \usebeamercolor[fg]{block body}%
        \colorlet{bktitlebg}{block title.bg}%
        \colorlet{bktitlefg}{block title.fg}%
        \colorlet{bkbodyfg}{block body.fg}%
      },%
      shadow={1mm}{-1mm}{0mm}{black!50!white},%
      enhanced,%
      colback=bktitlebg, colframe=bktitlebg,%
      coltext=bkbodyfg, coltitle=bktitlefg,%
      bottomrule=0pt, leftrule=0pt, rightrule=0pt, toprule=0pt, titlerule=0pt,%
      top=0pt, bottom=0pt, left=0pt, right=0pt,%
      toptitle=0pt, bottomtitle=-6pt,%
      borderline={0.5pt}{0.5mm}{white},%
      arc=0pt, boxsep=6pt,%
      left=1ex, right=1ex, smart shadow arc=false
    }
  }

  % \setbeamercolor{local structure}{parent=normal text}
  \setbeamertemplate{block begin}
  {
    \setbeamercolor{local structure}{parent=structure, fg=SPWLA.fg}
    \ifx\insertblocktitle\@empty
      \begin{tcolorbox}[
        block-spwla
      ]
    \else
      \begin{tcolorbox}[
        block-spwla,%
        title=\insertblocktitle,%
      ]
    \fi
  }
  \setbeamertemplate{block end}
  {
    \end{tcolorbox}
  }
}

